function sudo:dispatch:emacs {
  while (( $# != 0 )); do
    case "$1" in
      -*) ;;

      # TODO: we need something proper to check creation possibility
      *) [[ ! -e "$1" || (-r "$1" && -w "$1") ]] || return 0 ;;
    esac

    shift
  done

  return 1
}

sudo:dispatch sudo:dispatch:emacs emacs

